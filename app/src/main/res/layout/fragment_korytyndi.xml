<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:id="@+id/gradientLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gradient8"
            android:minHeight="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="-10dp"
                android:layout_toStartOf="@+id/playImage"
                android:layout_weight="1"
                android:maxLines="1"
                android:padding="10dp"
                android:text="Курсты қорытындылау тесті"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gameUpai"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/gameName"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="0/15 балл"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/playImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_play_arrow_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gradient4"
            android:minHeight="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="-10dp"
                android:layout_toStartOf="@+id/playImage2"
                android:layout_weight="1"
                android:maxLines="1"
                android:padding="10dp"
                android:text="Сұраққа- жауап"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gameUpai2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gameName2"
                android:layout_toStartOf="@+id/playImage2"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Дәптермен жұмыс"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/playImage2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_menu_book_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/test3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gradient5"
            android:minHeight="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="-10dp"
                android:layout_toStartOf="@+id/playImage3"
                android:layout_weight="1"
                android:maxLines="1"
                android:padding="10dp"
                android:text="Сөйлемді толықтыр"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gameUpai3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gameName3"
                android:layout_toStartOf="@+id/playImage3"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Дәптерге орындайық"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/playImage3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_description_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

